<style>
        
        .container{
            display: flex;
        }
        .container-fluid{
            margin-top: 2%;
        }
        .left{
            margin-top: 5%;

        }
        .navbar-brand{
            display: flex;
            justify-content: center;
        }
      

</style>
<nav class="navbar" style="background-color: black; color: white;height:15vh;">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/home" style="box-shadow: none;color:white;"><h1>My Ride</h1></a>
          </div>
          <ul class="nav navbar-nav out"></ul>
        </div>
      </nav>
    <div class="container">
        <div class="left">
            <img src="https://img.freepik.com/free-vector/app-concept-taxi_23-2148487484.jpg?size=338&ext=jpg&ga=GA1.2.282848466.1666245166&semt=sph"  height="470vh";  width="520vw" > 
        </div>
        <div class="container-fluid" style="min-height: 50vh;">
            <div class="row">
                <!-- <div class="col-sm-3 bg-primary"></div> -->
                <div class="col-sm-6 offset-sm-3">
                    <h1 class="text-center">SIGN UP</h1>
                    <form name="loginform"  id="loginform" method="post">
                        <div>
                            <label>First Name</label>
                            <input type="text" name="first_name" class="form-control" placeholder="Enter first name"  maxlength="50" required>
                        </div>
                        <div>
                            <label>Last Name</label>
                            <input type="text" name="last_name" class="form-control" placeholder="Enter last name"  maxlength="50" required>
                        </div>
                        <div>
                            <label>Email</label>
                            <input type="email" name="email" class="form-control" placeholder="me@example.com" minlength="5" maxlength="50" required>
                        </div>
                        <div>
                            <label>Mobile Number</label>
                            <input type="number" name="mobile_no" class="form-control"  minlength="5" maxlength="50" required>
                        </div>
                         <div>
                            <label>User Role</label>
                             <select id="role" name="role" class="form-control">
                                <option selected>Passenger</option>
                                <option>Driver</option>
                                
                            </select>
                        </div>

                        <div>
                            <label>Password</label>
                            <input type="password" name="password" class="form-control"  minlength="8" maxlength="25" required>
                        </div>
                        <div>
                            <label>Confirm Password</label>
                            <input type="password" name="conpassword" class="form-control"  minlength="8" maxlength="25" required>
                        </div>
                        <div>
                        <!-- {{#if result}}
                            {{#if result.success}}
                            <div class="alert alert-success">
                                Data saved successfully
                            </div>
                            {{else}}
                            <div class="alert alert-danger">
                                Task failed 
                            </div>
                            {{/if}}
                            {{/if}}
                        </div> -->
                        <div class="d-grid mt-4">
                            <input type="submit" class="btn btn-primary shadow" id="btn-login"value="Sign Up" style="background-color: black;">
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    
    

   
    
    <!-- Bootstrap JavaScript Libraries -->
    
    <script>
        var email = document.forms['loginform']['email'];
        var password = document.forms['loginform']['password'];
        var conpassword = document.forms['loginform']['conpassword'];
        var btn = document.getElementById('btn-login');

        // function validate(e){
        //     e.preventDefault();
            
        // }

        document.querySelectorAll('#loginform input').forEach(e=>{
            e.addEventListener('keyup', function(event){
                if(!email.validity.valid || !password.validity.valid || password.value != conpassword.value ){
                    btn.setAttribute('disabled', true);
                }
                else{
                    btn.removeAttribute('disabled');
                }
               
            
            })
        });
        
    </script>

