<h1 class="text-center">Bookings</h1>
<div class="container">
    
    <table class="table table-striped mt-4">
        <tr>
            
            <th>Id</th>
            <th>Pick Up</th>
            <th>Destination</th>
            <th>Cab Type</th>
            <th>Date</th>
            <th>Time</th>
            <th>Action</th>
            
            
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.booking_id}}</td>
            <td>{{this.dataValues.pick_up}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.cab_type}}</td>
            <td>{{this.dataValues.date}}</td>
            <td>{{this.dataValues.time}}</td>
            <td>
                
                <a href="/cancel/{{this.dataValues.booking_id}}" class="text-danger" onclick="return confirm('Are you sure you want to cancel the booking')">Cancel</a> |
                </td>
        </tr>
        {{/each}}
    </table>
