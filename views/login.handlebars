<div class="all">
    <div class="left">
        <img src="https://static.vecteezy.com/system/resources/thumbnails/010/591/051/small_2x/taxi-ordering-service-app-concept-girl-booking-yellow-cab-woman-with-smartphone-order-car-transfer-online-route-and-arrival-address-on-city-map-on-mobile-screen-web-application-get-taxicab-vector.jpg" style="height:65vh ;width:40vw;margin:10%;">

    </div>


    <div class="container-fluid" style="min-height: 60vh;">
        <div class="row">
            <!-- <div class="col-sm-3 bg-primary"></div> -->
            <div class="col-sm-6 offset-sm-3">
                <h1 class="text-center">Login</h1>
                <form name="loginform" id="loginform" method="post">
                    <div>
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" placeholder="me@example.com" minlength="5" maxlength="50" required>
                    </div>
                    <br>
                    <div>
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" minlength="8" maxlength="25" required>
                    </div>

                    <div class="sub">
                        <input type="submit"  class="btn" id="btn-login" style="color:white;background-color: black;padding: 10px;border-radius:20px;"
                            value="Log in">
                   
                      
                    </div>
                    {{#if message}}
                        <p class="text-danger">{{message}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>

</div>






<!-- Bootstrap JavaScript Libraries -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" crossorigin="anonymous">
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" crossorigin="anonymous">
</script>

<script>
    var email = document.forms['loginform']['email'];
    var password = document.forms['loginform']['password'];
    var btn = document.getElementById('btn-login');



    document.querySelectorAll('#loginform input').forEach(e => {
        e.addEventListener('keyup', function (event) {
            if (!email.validity.valid || !password.validity.valid) {
                btn.setAttribute('disabled', true);
            }
            else {
                btn.removeAttribute('disabled');
            }


        })
    });

</script>