        </div>
      </nav>
    


<div class="all">
    <div class="left">
        <img src="https://static.vecteezy.com/system/resources/previews/007/784/472/non_2x/online-cab-booking-vector.jpg" style="height:60vh ;width:50vw;margin:10%;">

    </div>


    <div class="container-fluid" style="min-height: 60vh;">
        <div class="row">
            <!-- <div class="col-sm-3 bg-primary"></div> -->
            <div class="col-sm-6 offset-sm-3">
                <h1 class="text-center">Cab Details</h1>
                <form name="loginform" id="loginform" method="post">
                    <div>
                        <label>Cab No</label>
                        <input type="text" name="cab_no" class="form-control" minlength= "5" maxlength="50" required>
                    </div>
                
                    <div>
                        <label>Cab Name</label>
                        <input type="text" name="cab_name" class="form-control" minlength= "5" maxlength="50" required>
                    </div>
                    <div>
                            <label>Cab Type</label>
                             <select id="type" name="cab_type" class="form-control">
                                <option selected>Delux</option>
                                <option>Premium</option>
                                <option>Normal</option>
                                
                            </select>
                        </div>
                    <div>
                        <label>Cab Capacity</label>
                        <input type="number" name="cab_capacity" class="form-control" minlength= "5" maxlength="50" required>
                    </div>

                    <div class="sub">
                        <input type="submit"  class="btn" id="btn-login" style="color:white;background-color: black;padding: 10px;border-radius:20px;"
                            value="Submit">
                   
                    </div>
                    {{#if message}}
                        <p class="text-danger">{{message}}</p>
                    {{/if}}
                </form>
            </div>
        </div>
    </div>

</div>
