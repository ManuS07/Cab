    crossorigin="anonymous">
<style>
    body {
        background-color: white;
        margin: 0;
        padding: 0;
    }

    a {
        box-shadow: inset 0 0 0 0 white;
        color: #ffffff;
        margin: 0 -.25rem;
        padding: 0 .25rem;
        transition: color .3s ease-in-out, box-shadow .3s ease-in-out;
    }

    a:hover {
        box-shadow: inset 100px 0 0 0 white;
        color: rgb(0, 0, 0);
    }

    .row {
        align-items: center;
        justify-content: space-around;
        display: flex;
    }

    .col-sm-4 {

        align-items: center;
        justify-content: space-around;
        display: flex;
        border-radius: 8px;
        padding-top: 20px;
        padding-bottom: 20px;
        font-family: Verdana, Geneva, Tahoma, sans-serif;


    }
</style>

<nav class="navbar" style="background-color: black;height:15vh">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/home" style="box-shadow: none;color:white;">
                <h1>My Ride</h1>
            </a>
        </div>
        <ul class="nav navbar-nav out">



        </ul>
    </div>
</nav>
<div class="container" style="background-color: white;width:30%;height: 350px; border-radius: 20px ;padding-left: 50px;padding-right: 50px;margin-top:7%;">
    <h2><b>Book your ride</b></h2>
    <form action="" id="lf" method="post" oninput='pk.setCustomValidity(pk.value == ds.value ? "Pickup and destination cannot be same." : "")'>
        <div class="form-group">
            <label for="pickup">Pickup:</label>
            <input type="text" class="form-control" id="pk" placeholder="Enter pickup " name="pick_up" required>
        </div>
        <div class="form-group">
            <label for="destination">Destination:</label>
            <input type="text" class="form-control" id="ds" placeholder="Enter destination" name="destination" required>
        </div>
        
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>

        <div class="form-group">
            <label for="time">Time:</label>
            <input type="time" class="form-control" id="tm" name="time" required>
        </div>
        


        <button type="submit" class="btn btn-default" id="btnsub"
            style="color:white;background-color:black ;margin-left: 40%;margin-top: 2%;border-radius: 20px;padding: 12px;font-size: 12pt;">Book</button>

    </form>
</div>





<script>

    var pickup = document.forms['lf']['pk'];
    var destination = document.forms['lf']['ds'];

    var time = document.forms['lf']['tm'];

    document.querySelectorAll('#lf input').forEach(e => {
        e.addEventListener('keyup', function (event) {
            if (!pickup.validity.valid || !destination.validity.valid || !time.validity.valid || !date.validity.valid) {
                btnsub.setAttribute('disabled', true)


            }
            else {
                btnsub.removeAttribute('disabled', true);
            }
        })

    });


</script>